<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="yaseerfarah22.com.pharmacy.View.Splash">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:elevation="8dp"
        android:layout_below="@+id/home_bar"
        android:id="@+id/list_rank"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <View
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@color/gray"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/center"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/order_by"
                android:layout_toLeftOf="@+id/center"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                >

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_order"
                    android:id="@+id/order_icon"
                    android:layout_toRightOf="@+id/order_text"
                    android:layout_marginLeft="20dp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:id="@+id/order_text"
                    android:text="Order By"
                    android:textColor="@android:color/black"
                    />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/filter_by"
                android:layout_toRightOf="@+id/center"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                >

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_filter"
                    android:id="@+id/filter_icon"
                    android:layout_toRightOf="@+id/filter_text"
                    android:layout_marginLeft="20dp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:id="@+id/filter_text"
                    android:text="Filter By"
                    android:textColor="@android:color/black"
                    />

            </RelativeLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>
