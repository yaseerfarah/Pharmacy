<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="90dp"
    android:layout_height="wrap_content"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginBottom="10dp"
    android:id="@+id/cat_item"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:id="@+id/con"
    android:elevation="8dp"
    />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"





        >


        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:id="@+id/skin_container"
            >

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="@drawable/gradient_yallow"
                android:id="@+id/skin_color"


                />

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_lotion"
                android:layout_centerInParent="true"
                android:id="@+id/skin_icon"
                />

        </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@+id/skin_container"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Cash on Delivery"
            android:textColor="@android:color/black"
            android:id="@+id/skin_text"
            android:layout_marginBottom="10dp"
            />



    </RelativeLayout>




</RelativeLayout>