<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="yaseerfarah22.com.pharmacy.View.NetworkFailed"
    android:background="@color/white"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:id="@+id/empty_list"



            >

            <ImageView
                android:layout_width="200dp"
                android:layout_height="190dp"
                android:background="@mipmap/satempty"
                android:id="@+id/empty_icon"


                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check Your Connection"
                android:textSize="18sp"
                android:layout_below="@+id/empty_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textColor="@color/grey"
                android:textStyle="bold"
                android:id="@+id/empty_text"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="And Try Again"
                android:textSize="15sp"
                android:layout_below="@+id/empty_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textColor="@color/grey"
               android:id="@+id/empty_text2"


                />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/empty_text2"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_background"
                android:layout_centerHorizontal="true"
                android:text="Try Again"
                android:textSize="13sp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:id="@+id/try_again"
                />


        </RelativeLayout>






    </RelativeLayout>


</FrameLayout>
